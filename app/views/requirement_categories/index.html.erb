<h1>Listing requirement_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Graduation requirement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirement_categories.each do |requirement_category| %>
      <tr>
        <td><%= requirement_category.name %></td>
        <td><%= requirement_category.graduation_requirement %></td>
        <td><%= link_to 'Show', requirement_category %></td>
        <td><%= link_to 'Edit', edit_requirement_category_path(requirement_category) %></td>
        <td><%= link_to 'Destroy', requirement_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement category', new_requirement_category_path %>
