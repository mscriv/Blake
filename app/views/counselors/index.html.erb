
<h1><%= @school %></h1>

<h2>Listing counselors</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bio</th>
      <th>Contact</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @school.counselors.each do |counselor| %>
      <tr>
        <td><%= counselor.name %></td>
        <td><%= counselor.bio %></td>
        <td><%= counselor.contact %></td>
        <td><%= counselor.school %></td>
        <td><%= link_to 'Show', counselor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Counselor', new_school_counselor_path %>
